<!DOCTYPE html>
<html lang="en">
   <head>
        <meta charset="UTF-8" />
        <!-- IE Compatibility Meta -->
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <!-- First Mobile Meta -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>sign up</title>
        <link rel='stylesheet' href="/assets/login&signup/font-awesome.min.css"/>
        <link rel='stylesheet' href="/assets/login&signup/bootstrap.css"/>
        <link rel='stylesheet' href="/sign-up/css/pages.css"/>
        <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@600&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Exo:wght@100&family=Source+Code+Pro:wght@200&display=swap" rel="stylesheet"> 
        <link rel='stylesheet' href='http://fonts.googleapis.com/css?family=Droid+Sans:400,700'>
        <!--[if lt IE 9]>
        <script src="js/html5shiv.min.js"></script>
        <script src="js/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
    <!-- Start Section Contact Us -->
        
        <section class="sign-up text-center">
            <div class="fields">
                <div class="container">
                        <img src="/sign-up/img/fox logo/fox1.svg"  alt="">
                        <h2 class="h1">Amigurumi</h2>
                        <p class="lead">Create your new account!</p>
                        
                        <div id="message"> </div>
                        <!-- Start Contact Form -->
                        <div class="row">
                            <% if (errorMessage) { %>
                                <div><%= errorMessage %></div>
                            <% } %>
                        <form role="form" id="main" action="/signup" method="POST" >
                            <input type="hidden" name="_csrf" value="<%=csrfToken %>">
                            <div class="way">
                                <span class="user"> <input type="radio" value="user" name="type">user </span>
                                <span class="craft"> <input type="radio" value="Handcraft" name="type">Handcraft</span>
                             </div>
                            <div class="col-lg-offset-4 col-lg-4 col-lg-offset-4 col-md-offset-3 col-md-6 col-md-offset-3 col-sm-offset-3 col-sm-6 col-sm-offset-3 col-xs-offset-1 col-xs-10 col-xs-offset-1" >
                                <div class="form-group">
                                     <input type="text" id="name" class="form-control input-lg" placeholder="Username" name="name" autocomplete="off"> 
                                </div>
                                <div class="form-group">
                                    <input type="email" id="email" class="form-control input-lg" name="email" placeholder="Email" autocomplete="off" >
                                </div>
                                <div class="form-group">
                                    <input type="text" id="phone" class="form-control input-lg" name="phone" placeholder="Phone Number" autocomplete="off">
                                </div>
                                   <div class="form-group">
                                    <input type="password"  id="password" class="form-control input-lg" name="password" placeholder="password" autocomplete="off">
                                </div>
                                <div class="form-group">
                                    <input type="password" id="op" class="form-control input-lg" placeholder="confirm password" required autocomplete="off"> <span id="open" class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                                </div>
                   
                                <button type="submit" id="sign" class=" butt btn btn-danger btn-lg btn-block">Sign up </button>
                            </div>
                           
                        </form>
                        
                        <!-- End Contact Form -->
                    
                    </div>
                    <div class="role"> 
                        <p> By creating an account, I agree to <a href="Website-terms.html"> Website terms & Privacy policy. </a> </p>
                        <hr>
                        <p> Already have an account?<a href="/login">Log in</a> </p>
                    </div>
                </div>
            </div>
        </section>
        <script src="../assets/home&profile/js/jquery-3.3.1.min.js"></script>
        <script src="/assets/login&signup/js/bootstrap.min.js"></script>
        <script src="/sign-up/js/test.js"></script>
    </body>    
        <!-- End Section Contact Us -->
</html>